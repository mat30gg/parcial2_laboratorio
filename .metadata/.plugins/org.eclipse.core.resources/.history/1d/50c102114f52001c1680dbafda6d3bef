#include <stdio.h>
#include <stdlib.h>
#include "../inc/LinkedList.h"
#include "archivos.h"
#include "input.h"
#include "libro.h"
#include "editorial.h"

int LibrosDesdeTexto(FILE* pArchivo, LinkedList* listaLibros)
{
	int exito;
	exito = 0;
	eLibro* aux;
	char id[8];
	char titulo[128];
	char autor[128];
	char precio[8];
	char idEditorial[8];
	printf("0\n");
	if(pArchivo != NULL)
	{
		printf("1\n");
		exito = 1;
		fscanf(pArchivo, "%[^;];%[^;];%[^;];%[^;];%[^\n]\n", id, titulo, autor, precio, idEditorial);
		while(!feof(pArchivo))
		{
			printf("2");
			fscanf(pArchivo, "%[^;];%[^;];%[^;];%[^;];%[^\n]\n", id, titulo, autor, precio, idEditorial);
			printf("%s %s %s %s %s\n",id, titulo, autor, precio, idEditorial);
			aux = NuevoLibroParametros(id, titulo, autor, precio, idEditorial);
			if(aux != NULL)
			{
				ll_add(listaLibros, aux);
			}
		}
	}
	return exito;
}
