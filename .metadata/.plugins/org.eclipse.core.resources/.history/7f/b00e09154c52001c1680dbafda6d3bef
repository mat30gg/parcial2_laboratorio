int controller_1LeerArchivoDeLibros(LinkedList* listaLibros)
{
	int exito;
	char nArchivo[64];
	FILE* pArchivo;

	exito = 0;
	getString("Ingrese nombre del archivo con datos de libros.", nArchivo);
	HacerFormatoCSV(nArchivo);
	pArchivo = fopen(nArchivo, "r");
	if(pArchivo != NULL)
	{

		exito = 1;
	}
	return exito;
}

